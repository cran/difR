citHeader("To cite package 'difR' in publications use:")

citEntry(entry = "Manual",
title = "difR: Collection of methods to detect dichotomous differential item functioning (DIF) in psychometrics",
author = personList(as.person("David Magis"),as.person("Sebastien Beland"),as.person("Gilles Raiche")),
year = "2012",
note = paste("R package version ",packageDescription("difR")$Version,".",sep=""),
textVersion  = paste("David Magis, Sebastien Beland and Gilles Raiche (2012). ", 
"difR: Collection of methods to detect dichotomous differential item functioning (DIF) in psychometrics. ",
"R package version ",packageDescription("difR")$Version,".",sep="")
)

